<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h4>Sign in to Piranha!</h4>

      {{#em-form action="signIn" submit_button=false model=model}}
        {{em-input label="email" property="email"}}
        {{em-input label="password" property="password" type="password" placeholder="Minimum 8 characters."}}
        <div class="form-actions">
          <input type="submit" class="btn btn-primary" value="Sign in"/>
        </div>
      {{/em-form}}

    </div>
  </div>
</div>
